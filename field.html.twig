
<div class="orbit" role="region" aria-label="Orbit Pictures" data-orbit data-use-m-u-i="false">
  <ul class="orbit-container" style="width:100%" align="middle">
    <button class="orbit-previous" aria-label="previous"><span class="show-for-sr">Previous Slide</span>&#9664;</button>
    <button class="orbit-next" aria-label="next"><span class="show-for-sr">Next Slide</span>&#9654;</button>  
    {% for item in items %}
      <li align="middle" {{ item.attributes.addClass('orbit-slide') }}>{{ item.content }}</li>
    {% endfor %}
    </ul>
  <nav class="orbit-bullets">
   {% for item in items %}
   <button {% if (loop.first) %} class="is-active" {% endif %} data-slide={{ loop.index - 1 }}><span class="show-for-sr">slide details.</span></button>
   {% endfor %}
 </nav>
</div>



